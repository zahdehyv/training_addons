<?xml version="1.0"?>
<odoo>
    <record id="property_tags_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">property.tags</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="property_tags_view_tree" model="ir.ui.view">
        <field name="name">property.tags.tree</field>
        <field name="model">property.tags</field>
        <field name="arch" type="xml">
            <tree string="Property Tags">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="property_tags_view_form" model="ir.ui.view">
        <field name="name">property.tags.form</field>
        <field name="model">property.tags</field>
        <field name="arch" type="xml">
            <form string="Property Tags Form">
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                </sheet>
            </form>
        </field>
    </record>

</odoo>